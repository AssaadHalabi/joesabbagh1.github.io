---
const navigationItems = [
  { name: "Home", url: "/" },
  { name: "Projects", url: "/projects/" },
]

interface Props {
  pageTitle?: string
}

const { pageTitle } = Astro.props
---

<header class="flex items-center justify-between border-b-4 border-black p-6">
  {pageTitle && <h1 class="hidden">{pageTitle}</h1>}
  <a href="/" title="Back to Home">
    <p class="righteous text-2xl md:text-5xl">Joe Sabbagh</p>
  </a>
  <nav class="hidden md:inline-block">
    <ul class="poppins flex gap-8">
      {
        navigationItems.map((item) => (
          <li>
            <a
              class="hover:text-green text-lg font-medium transition-all duration-150 ease-in-out hover:underline"
              href={item.url}
              title={`Go to ${item.name}`}
            >
              {item.name}
            </a>
          </li>
        ))
      }
      <li>
        <a
          class="hover:text-green text-lg font-medium transition-all duration-150 ease-in-out hover:underline"
          href="/Joe_Sabbagh_CV.pdf"
          download="Joe_Sabbagh_CV"
        >
          Resume
        </a>
      </li>
    </ul>
  </nav>
  <nav class="flex md:hidden">
    <ul class="flex gap-6">
      <li><a href="/projects/">Projects</a></li>
      <li>
        <a href="/Joe_Sabbagh_CV.pdf" download="Joe_Sabbagh_CV">Resume</a>
      </li>
    </ul>
  </nav>
</header>
